---
import Layout from "../layouts/Layout.astro";
import Cta from "../components/Shared/Cta.astro";
---

<Layout title="Documentation | Apptainer - Portable, Reproducible Containers">
	<div class="mt-20 bg-white px-6 py-24 sm:py-32 lg:px-8">
		<div class="mx-auto max-w-2xl text-center">
			<h2 class="text-4xl font-bold uppercase tracking-tight text-gray-900 sm:text-6xl">Documentation</h2>
			<p class="mt-6 text-lg leading-8 text-gray-600">
				The latest release is labelled <code class="text-blue-500">latest</code> below. The current development version will be labelled <code
					class="text-blue-500">
					main
				</code>.
			</p>
		</div>
	</div>
	<div class="mx-auto mb-40 max-w-4xl">
		<div class="px-4 sm:px-6 lg:px-8">
			<div class="mt-8 flow-root">
				<div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
					<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
						<table class="min-w-full divide-y divide-gray-300">
							<thead>
								<tr>
									<th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Version</th>
									<th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
										<span class="sr-only">User Documentation</span>
									</th>
									<th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
										<span class="sr-only">Admin Documentation</span>
									</th>
								</tr>
							</thead>
							<tbody class="divide-y divide-gray-200">
								<tr>
									<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><code>latest</code></td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/user/latest/">
											User Documentation <span aria-hidden="true">&rarr;</span>
										</a>
									</td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/admin/latest/">
											Admin Documentation <span aria-hidden="true">&rarr;</span>
										</a>
									</td>
								</tr>
								<tr>
									<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><code>main</code></td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/user/main/">User Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/admin/main/">
											Admin Documentation <span aria-hidden="true">&rarr;</span>
										</a>
									</td>
								</tr>
								<tr>
									<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><code>1.4</code></td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/user/1.4/">User Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/admin/1.4/">Admin Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
								</tr>
								<tr>
									<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><code>1.3</code></td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/user/1.3/">User Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/admin/1.3/">Admin Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
								</tr>
								<tr>
									<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><code>1.2</code></td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/user/1.2/">User Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/admin/1.2/">Admin Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
								</tr>
								<tr>
									<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><code>1.1</code></td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/user/1.1/">User Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/admin/1.1/">Admin Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
								</tr>
								<tr>
									<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><code>1.0</code></td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/user/1.0/">User Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
									<td class="whitespace-nowrap px-3 py-4 text-sm font-semibold text-blue-500">
										<a href="https://apptainer.org/docs/admin/1.0/">Admin Documentation <span aria-hidden="true">&rarr;</span></a>
									</td>
								</tr>
							</tbody>
						</table>
						<hr class="mb-3" />
						<p class="text-xs">
							Looking for Singularity documentation? <a class="font-semibold text-blue-500 underline" href="/documentation-legacy">
								Click here!
							</a>
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<Cta />
</Layout>
